    .item 
        .ui.input.right.labeled
            input(value="{{project.name}}")
            btn.icon.green.label(
                tooltip="Save project"
                on-click="['downloadProject', project.name]")
                icon.download

        file-button.icon(
            on-read="uploadProject" 
            tooltip="Open existing project"
            type="binary")
            icon.folder.open 

        //- TODO: Implement this 
            btn.icon.red(
                tooltip="Close project"
                on-click="closeProject")
                icon.folder.close

    .item
        ack-button.icon(on-click="undo" tooltip="Undo changes") Undo

    .item
        .ui.buttons
            ack-button.icon(
                on-click="save" 
                tooltip="Save now in local storage (just in case)"
                timeout="7000"
                ): icon.save
            btn.icon.red(
                on-click="deleteCurrent" 
                tooltip="Delete current layout and script"
                ): icon.erase

    .item
        ack-button(on-click="cleanupLayers") Cleanup Layers

    .right.item 
        .ui.button.basic.mini.pink
            a.icon(href="https://github.com/aktos-io/aecad-example" tooltip="Get the example project")
                icon.download Example
        btn.icon(on-click="showHelp"): icon.help Help
